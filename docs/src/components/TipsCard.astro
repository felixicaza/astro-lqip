---
import Arrow from '@icons/arrow.svg'

interface Props {
  title: string
  slug: string
}

const { title, slug } = Astro.props as Props;
---

<a href={`/usage-tips/${slug}`}>
  {title}
  <Arrow width="16" height="16" />
</a>

<style>
  a {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    padding: 12px 20px;
    border: 1px solid #373444;
    border-radius: 8px;
    font-weight: bold;
    transition: border-color 0.2s ease-in-out, background-color 0.2s ease-in-out;
    will-change: border-color;
    box-shadow:
      0px 8px 4px rgba(0, 0, 0, 0.05),
      0px 5px 2px rgba(0, 0, 0, 0.05),
      0px 3px 2px rgba(0, 0, 0, 0.09),
      0px 1px 1px rgba(0, 0, 0, 0.12);

    &:hover {
      background-color: color-mix(in srgb, #9999a3, transparent 95%);
      border-color: #9999a3;
    }

    & svg {
      flex-shrink: 0;
    }
  }
</style>
