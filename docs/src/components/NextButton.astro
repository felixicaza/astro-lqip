---
import Arrow from '@icons/arrow.svg'

interface Props {
  href: string
  label: string
}

const { href, label } = Astro.props as Props;
---

<a href={href}>
  <span>
    <sup>Next</sup>
    {label}
  </span>
  <span>
    <Arrow width={18} height={18} />
  </span>
</a>

<style>
  a {
    align-self: end;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px 12px 62px;
    border: 1px solid #373444;
    border-radius: 8px;
    transition: border-color 0.2s ease-in-out;
    will-change: border-color;
    box-shadow:
      0px 8px 4px rgba(0, 0, 0, 0.05),
      0px 5px 2px rgba(0, 0, 0, 0.05),
      0px 3px 2px rgba(0, 0, 0, 0.09),
      0px 1px 1px rgba(0, 0, 0, 0.12);

    &:hover {
      border-color: #9999a3;
    }

    & span:nth-child(1) {
      display: flex;
      flex-direction: column;
      align-items: end;
      gap: 4px;
      font-size: 22px;

      & sup {
        font-size: 14px;
      }
    }
  }
</style>
